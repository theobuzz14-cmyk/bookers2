<div class = "flashmessage">
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', book: @newbook ,user: @user %>
    </div>
        
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(100,100) %>
              <br><%= link_to @book.user.name, user_path(@book.user) %></td>
              <td><%= link_to @book.title, book_path %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><%= link_to "edit", edit_book_path(@book) %></td>
                <td><%= link_to "destroy", book_path ,method: :delete, "data-confirm" => "Are you sure?" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>

