<div class = "flashmessage">
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user, book: @book %>
    </div>
        
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>         
              <td><%= image_tag @user.get_profile_image(100,100) %>
              <br><%= link_to @user.name, user_path %></td>
              <td><%= link_to @book.title, book_path %></td>
              <td><%= @book.body %></td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>

