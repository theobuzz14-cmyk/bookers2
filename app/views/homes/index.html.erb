<div class = "flashmessage">
  <%= flash[:notice] %>
</div>


<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
          <table class="table">
            <thead>
              <tr>
               <th>image</th>
               <th>name</th>
               <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td><%= image_tag @user.get_profile_image(100,100) %></td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= link_to "edit", users_path %></td>
                <td><%= link_to "destroy", users_path %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>